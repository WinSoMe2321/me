<script>
/* PASSWORDS */
const p1pass="i want to eat your pie";
const p2pass="my everyTHING belongs to you";

/* NAVIGATION */
function go(id){
  document.querySelectorAll("section").forEach(s=>s.classList.remove("active"));
  document.getElementById(id).classList.add("active");
  handleHearts(id);
  if(id==="p3") startHeartbeat();
  if(id==="p6") fireworks();
}

/* PASSWORD CHECK */
function checkP1(){
  if(pass1.value===p1pass) go("p2");
  else alert("Hehe‚Ä¶ only you can unlock this üòâ");
}
function checkP2(){
  if(pass2.value===p2pass) go("p6");
  else alert("Almost‚Ä¶ try again ‚ù§Ô∏è");
}

/* HEARTBEAT */
function startHeartbeat(){
  let beats=document.querySelectorAll(".beat");
  let i=0;
  let int=setInterval(()=>{
    if(i<beats.length){
      beats[i].classList.add("show","pulse");
      i++;
    }else clearInterval(int);
  },1400);
}

/* FLOATING HEART CONTROL */
const heartsBox=document.getElementById("hearts");
function spawnHearts(count){
  heartsBox.innerHTML="";
  for(let i=0;i<count;i++){
    let h=document.createElement("div");
    h.className="heart";
    h.style.left=Math.random()*100+"%";
    h.style.animationDuration=14+Math.random()*10+"s";
    h.style.opacity=.15+Math.random()*.15;
    heartsBox.appendChild(h);
  }
}
function handleHearts(page){
  if(page==="p5") heartsBox.innerHTML="";
  else if(page==="p3") spawnHearts(2);
  else if(page==="p6") spawnHearts(18);
  else spawnHearts(6);
}
spawnHearts(4);

/* FIREWORKS */
function fireworks(){
  for(let i=0;i<12;i++){
    let f=document.createElement("div");
    f.className="firework";
    f.style.left=Math.random()*100+"%";
    f.style.top=Math.random()*60+"%";
    document.body.appendChild(f);
    setTimeout(()=>f.remove(),1500);
  }
}
</script>

